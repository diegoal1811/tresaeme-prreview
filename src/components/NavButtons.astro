---
const navItems = [
  { text: 'Inicio', href: '#home' },
  { text: 'Nosotros', href: '#about' },
  { text: 'Proyectos', href: '#projects' },
  { text: 'Equipo', href: '#team' },
  { text: 'Contacto', href: '#' },
];
---

<div class="fixed z-50 top-5 w-xs max-w-lg -translate-x-1/2 left-1/2 justify-center items-center inline-flex rounded-lg shadow-xs" role="group">
  {navItems.map((item, index) => (
    <a
      href={item.href}
      class={`px-4 py-2 text-sm font-medium text-white bg-gray-700/50 border ${
        index === 0 ? 'rounded-s-lg' : index === navItems.length - 1 ? 'rounded-e-lg' : 'border-t border-b'
      } backdrop-blur-md border-gray-500/50 hover:bg-yellow-400 hover:text-black focus:z-10 focus:ring-2 focus:ring-yellow-text-yellow-400 focus:text-yellow-400`}
    >
      {item.text}
    </a>
  ))}
</div>
